extends ./layout.pug

block contenido
    div(class= "col-md-8 removeFloat center-block text-center bigTopSpace")
        h1 Editar Tarea
        each x in tareas
            form(action="/admin/produccion/"+x.id+"?_method=PUT" , method="POST")
                input(type="hidden" value="PUT" name="_method")
                div(class = "form-group")
                    label(for="ref") REF
                        select(class="form-control" name="ref",id="ref")
                            each x in calzado
                                option(value=x.ref)=x.ref
                div
                    label(for="cant") Cantidad
                    input(type = "text", name = "cant",id = "cant" class = "form-control" required="")
                div(class="row topSpace")
                    div(class="col-sm-10 col-xs-10 text-left")
                        input(type = "submit"  value = "Enviar" class = "btn btn-info")